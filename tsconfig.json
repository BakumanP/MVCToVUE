{
  "compilerOptions": {
    "outDir": "./Scripts",
    "allowJs": true,
    "target": "es5",
    "jsx": "preserve",
    "module": "es6",
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,  
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/TScripts/**/*",
    "./src/components/*.tsx",
    "/vue-tsx-support/enable-check.d.ts",
  ]
}